<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>

    </style>

    <style name="HomeAccounting.Style.SingleLineEditText" parent="">
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="HomeAccounting.Style.SpinnerBackground" parent="">
        <item name="android:background">@drawable/spinner_bg</item>
    </style>

    <style name="HomeAccounting.Style.SpinnerItem"
            parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="HomeAccounting.Style.SpinnerDropdownItem"
        parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
    </style>

</resources>